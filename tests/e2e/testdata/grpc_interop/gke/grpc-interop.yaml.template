apiVersion: v1
kind: Service
metadata:
  name: app
spec:
  ports:
  # Port that accepts gRPC and JSON/HTTP2 requests over HTTP.
  - port: 80
    targetPort: 8080
    protocol: TCP
    name: http2
  - port: 8001
    targetPort: 8001
    protocol: TCP
    name: admin
  selector:
    app: app
  type: LoadBalancer
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: app
  template:
    metadata:
      labels:
        app: app
    spec:
      containers:
      - name: apiproxy
        image: APIPROXY_IMAGE
        args: [ARGS]
        ports:
          - containerPort: 8080
          - containerPort: 8001
      - name: grpc-interop
        image: gcr.io/cloudesf-testing/grpc-interop-server:latest
        ports:
          - containerPort: 8081
