apiVersion: v1
kind: Service
metadata:
  name: app
spec:
  ports:
  # Port that accepts gRPC and JSON/HTTP2 requests over HTTP.
  - port: 80
    targetPort: 8080
    protocol: TCP
    name: http
  - port: 8001
    targetPort: 8001
    protocol: TCP
    name: admin
  selector:
    app: app
  type: LoadBalancer
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: app
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: app
    spec:
      containers:
      - name: apiproxy
        image: APIPROXY_IMAGE
        args: [ARGS]
        ports:
          - containerPort: 8080
      - name: bookstore
        image: gcr.io/cloudesf-testing/app:bookstore
        ports:
          - containerPort: 8081
